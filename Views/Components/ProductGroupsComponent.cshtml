@using Market.Models.ViewModels
@model IEnumerable<GroupViewModel> 

<!-- view component to list categories with their number of products -->
<ul class="list-group">
    @foreach (var cat in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/Group/@cat.GroupId/@cat.Name" style="text-decoration:none">@cat.Name</a>
            <span class="badge bg-primary">@cat.Count</span>
        </li>
    }
</ul>